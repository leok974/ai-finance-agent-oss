{
  "dashboard": {
    "title": "Ingest Health Monitor",
    "description": "Monitors CSV ingestion endpoint health and error rates. **Runbooks**: [Technical Details](https://github.com/your-org/ledgermind/blob/main/docs/INGEST_CASCADE_FIX.md) | [Deployment Guide](https://github.com/your-org/ledgermind/blob/main/CLEANUP_MONITORING_COMPLETE.md) | [Alert Setup](https://github.com/your-org/ledgermind/blob/main/ops/alerts/README.md)",
    "uid": "ingest-health",
    "version": 1,
    "timezone": "browser",
    "schemaVersion": 38,
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "type": "stat",
        "title": "Ingest Replace Errors (5m)",
        "targets": [
          {
            "expr": "rate(lm_ingest_errors_total{phase=\"replace\"}[5m])",
            "legendFormat": "Error Rate",
            "refId": "A"
          }
        ],
        "gridPos": {
          "x": 0,
          "y": 0,
          "w": 6,
          "h": 4
        },
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": 0,
                  "color": "green"
                },
                {
                  "value": 0.001,
                  "color": "red"
                }
              ]
            },
            "unit": "reqps"
          }
        },
        "options": {
          "colorMode": "background",
          "graphMode": "area",
          "textMode": "auto"
        }
      },
      {
        "id": 2,
        "type": "timeseries",
        "title": "Ingest Error Rate Over Time",
        "targets": [
          {
            "expr": "rate(lm_ingest_errors_total{phase=\"replace\"}[5m])",
            "legendFormat": "Replace Errors",
            "refId": "A"
          }
        ],
        "gridPos": {
          "x": 6,
          "y": 0,
          "w": 18,
          "h": 8
        },
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "axisLabel": "Errors/sec",
              "drawStyle": "line",
              "fillOpacity": 10,
              "showPoints": "auto"
            },
            "unit": "reqps"
          }
        },
        "options": {
          "tooltip": {
            "mode": "multi"
          },
          "legend": {
            "displayMode": "list",
            "placement": "bottom"
          }
        }
      },
      {
        "id": 3,
        "type": "stat",
        "title": "Total Replace Errors (24h)",
        "targets": [
          {
            "expr": "increase(lm_ingest_errors_total{phase=\"replace\"}[24h])",
            "legendFormat": "Total Errors",
            "refId": "A"
          }
        ],
        "gridPos": {
          "x": 0,
          "y": 4,
          "w": 6,
          "h": 4
        },
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": 0,
                  "color": "green"
                },
                {
                  "value": 1,
                  "color": "yellow"
                },
                {
                  "value": 5,
                  "color": "red"
                }
              ]
            },
            "unit": "short",
            "decimals": 0
          }
        },
        "options": {
          "colorMode": "background",
          "textMode": "value_and_name"
        }
      },
      {
        "id": 4,
        "type": "table",
        "title": "Recent Ingest Activity",
        "targets": [
          {
            "expr": "lm_ingest_errors_total",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "gridPos": {
          "x": 0,
          "y": 8,
          "w": 12,
          "h": 6
        },
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "auto"
            }
          },
          "overrides": [
            {
              "matcher": {
                "id": "byName",
                "options": "Value"
              },
              "properties": [
                {
                  "id": "custom.displayMode",
                  "value": "color-background"
                }
              ]
            }
          ]
        },
        "options": {
          "showHeader": true,
          "sortBy": [
            {
              "desc": true,
              "displayName": "Value"
            }
          ]
        }
      },
      {
        "id": 5,
        "type": "logs",
        "title": "Backend Logs (Ingest Related)",
        "targets": [
          {
            "expr": "{job=\"ai-finance-backend\"} |~ \"ingest|replace\"",
            "refId": "A"
          }
        ],
        "gridPos": {
          "x": 12,
          "y": 8,
          "w": 12,
          "h": 6
        },
        "options": {
          "showTime": true,
          "wrapLogMessage": true,
          "sortOrder": "Descending"
        }
      },
      {
        "id": 6,
        "type": "alertlist",
        "title": "Active Ingest Alerts",
        "targets": [],
        "gridPos": {
          "x": 0,
          "y": 14,
          "w": 24,
          "h": 4
        },
        "options": {
          "alertName": "",
          "dashboardAlerts": false,
          "groupBy": [],
          "groupMode": "default",
          "maxItems": 20,
          "sortOrder": 1,
          "stateFilter": {
            "firing": true,
            "pending": true,
            "noData": false,
            "normal": false
          },
          "alertInstanceLabelFilter": "{alertname=~\"Ingest.*\"}"
        }
      }
    ],
    "annotations": {
      "list": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "enable": true,
          "expr": "ALERTS{alertname=~\"Ingest.*\"}",
          "iconColor": "red",
          "name": "Ingest Alerts",
          "step": "60s",
          "tagKeys": "alertname,severity",
          "textFormat": "{{alertname}}: {{summary}}",
          "titleFormat": "Alert"
        }
      ]
    },
    "editable": true,
    "fiscalYearStartMonth": 0,
    "links": [],
    "liveNow": false,
    "tags": ["ingest", "monitoring", "errors"],
    "templating": {
      "list": []
    }
  },
  "overwrite": true,
  "folderId": 0,
  "folderUid": ""
}
