{
  "dashboard": {
    "id": null,
    "uid": "kms-crypto-health",
    "title": "KMS Crypto Health",
    "tags": ["kms", "security", "crypto", "encryption"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "30s",
    "templating": {
      "list": [
        {
          "name": "env",
          "type": "query",
          "datasource": {
            "type": "prometheus",
            "uid": "${DS_PROMETHEUS}"
          },
          "query": "label_values(up, env)",
          "includeAll": true,
          "multi": true,
          "refresh": 2,
          "sort": 1,
          "label": "Environment",
          "description": "Filter by environment (dev, prod, etc.)"
        },
        {
          "name": "service",
          "type": "query",
          "datasource": {
            "type": "prometheus",
            "uid": "${DS_PROMETHEUS}"
          },
          "query": "label_values(up{env=~\"$env\"}, job)",
          "includeAll": true,
          "multi": true,
          "refresh": 2,
          "sort": 1,
          "label": "Service",
          "description": "Filter by service/job name"
        }
      ]
    },
    "panels": [
      {
        "id": 1,
        "type": "stat",
        "title": "KMS Crypto Health",
        "gridPos": {
          "h": 6,
          "w": 6,
          "x": 0,
          "y": 0
        },
        "targets": [
          {
            "expr": "kms:crypto_health_status{env=~\"$env\", job=~\"$service\"}",
            "refId": "A",
            "legendFormat": "{{env}}/{{job}}"
          }
        ],
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          },
          "orientation": "auto",
          "textMode": "value_and_name",
          "colorMode": "background",
          "graphMode": "none",
          "justifyMode": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": 0,
                  "color": "red"
                },
                {
                  "value": 1,
                  "color": "green"
                }
              ]
            },
            "mappings": [
              {
                "type": "value",
                "options": {
                  "0": {
                    "text": "Unhealthy",
                    "color": "red"
                  },
                  "1": {
                    "text": "Healthy (KMS)",
                    "color": "green"
                  }
                }
              }
            ],
            "unit": "none"
          }
        },
        "description": "Combined KMS health indicator: crypto_mode=kms AND crypto_ready=true"
      },
      {
        "id": 2,
        "type": "stat",
        "title": "Crypto Mode",
        "gridPos": {
          "h": 6,
          "w": 6,
          "x": 6,
          "y": 0
        },
        "targets": [
          {
            "expr": "crypto_mode{env=~\"$env\", job=~\"$service\"}",
            "refId": "A",
            "legendFormat": "{{env}}/{{job}}"
          }
        ],
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          },
          "orientation": "auto",
          "textMode": "value_and_name",
          "colorMode": "background",
          "graphMode": "none"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": 0,
                  "color": "red"
                },
                {
                  "value": 1,
                  "color": "green"
                }
              ]
            },
            "mappings": [
              {
                "type": "value",
                "options": {
                  "0": {
                    "text": "env (fallback)",
                    "color": "red"
                  },
                  "1": {
                    "text": "kms (secure)",
                    "color": "green"
                  }
                }
              }
            ]
          }
        },
        "description": "Current encryption mode: 1=KMS, 0=env fallback"
      },
      {
        "id": 3,
        "type": "stat",
        "title": "Crypto Ready",
        "gridPos": {
          "h": 6,
          "w": 6,
          "x": 12,
          "y": 0
        },
        "targets": [
          {
            "expr": "crypto_ready{env=~\"$env\", job=~\"$service\"}",
            "refId": "A",
            "legendFormat": "{{env}}/{{job}}"
          }
        ],
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          },
          "orientation": "auto",
          "textMode": "value_and_name",
          "colorMode": "background",
          "graphMode": "none"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": 0,
                  "color": "red"
                },
                {
                  "value": 1,
                  "color": "green"
                }
              ]
            },
            "mappings": [
              {
                "type": "value",
                "options": {
                  "0": {
                    "text": "Not Ready",
                    "color": "red"
                  },
                  "1": {
                    "text": "Ready",
                    "color": "green"
                  }
                }
              }
            ]
          }
        },
        "description": "Crypto system initialization status"
      },
      {
        "id": 4,
        "type": "stat",
        "title": "Uptime Since Crypto Init",
        "gridPos": {
          "h": 6,
          "w": 6,
          "x": 18,
          "y": 0
        },
        "targets": [
          {
            "expr": "kms:uptime_since_last_crypto_init{env=~\"$env\", job=~\"$service\"}",
            "refId": "A",
            "legendFormat": "{{env}}/{{job}}"
          }
        ],
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          },
          "orientation": "auto",
          "textMode": "value_and_name",
          "colorMode": "value",
          "graphMode": "area"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": 0,
                  "color": "yellow"
                },
                {
                  "value": 300,
                  "color": "green"
                }
              ]
            }
          }
        },
        "description": "Time since last crypto initialization (restarts reset this)"
      },
      {
        "id": 5,
        "type": "timeseries",
        "title": "KMS Decryption Error Rate (5m)",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 6
        },
        "targets": [
          {
            "expr": "kms:decryption_error_rate_5m{env=~\"$env\", job=~\"$service\"}",
            "refId": "A",
            "legendFormat": "{{env}}/{{job}}"
          }
        ],
        "options": {
          "tooltip": {
            "mode": "multi",
            "sort": "desc"
          },
          "legend": {
            "displayMode": "table",
            "placement": "bottom",
            "showLegend": true,
            "calcs": ["last", "max", "mean"]
          }
        },
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 10,
              "spanNulls": false,
              "showPoints": "auto"
            },
            "unit": "ops",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": 0,
                  "color": "green"
                },
                {
                  "value": 0.01,
                  "color": "yellow"
                },
                {
                  "value": 0.1,
                  "color": "red"
                }
              ]
            }
          }
        },
        "description": "Rolling 5-minute decryption error rate (errors/sec)"
      },
      {
        "id": 6,
        "type": "timeseries",
        "title": "Crypto Health Status (Over Time)",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 6
        },
        "targets": [
          {
            "expr": "kms:crypto_health_status{env=~\"$env\", job=~\"$service\"}",
            "refId": "A",
            "legendFormat": "{{env}}/{{job}}"
          }
        ],
        "options": {
          "tooltip": {
            "mode": "multi"
          },
          "legend": {
            "displayMode": "table",
            "placement": "bottom",
            "showLegend": true
          }
        },
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "stepAfter",
              "fillOpacity": 20,
              "spanNulls": false,
              "lineWidth": 2
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": 0,
                  "color": "red"
                },
                {
                  "value": 1,
                  "color": "green"
                }
              ]
            },
            "mappings": [
              {
                "type": "value",
                "options": {
                  "0": {
                    "text": "Unhealthy"
                  },
                  "1": {
                    "text": "Healthy"
                  }
                }
              }
            ],
            "min": -0.1,
            "max": 1.1
          }
        },
        "description": "Historical view of KMS health status (1=healthy, 0=unhealthy)"
      },
      {
        "id": 7,
        "type": "table",
        "title": "Crypto Mode by Service",
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 14
        },
        "targets": [
          {
            "expr": "crypto_mode{env=~\"$env\", job=~\"$service\"}",
            "refId": "A",
            "legendFormat": "",
            "instant": true,
            "format": "table"
          },
          {
            "expr": "crypto_ready{env=~\"$env\", job=~\"$service\"}",
            "refId": "B",
            "legendFormat": "",
            "instant": true,
            "format": "table"
          },
          {
            "expr": "kms:uptime_since_last_crypto_init{env=~\"$env\", job=~\"$service\"}",
            "refId": "C",
            "legendFormat": "",
            "instant": true,
            "format": "table"
          }
        ],
        "transformations": [
          {
            "id": "merge",
            "options": {}
          },
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "Time": true,
                "__name__": true
              },
              "renameByName": {
                "env": "Environment",
                "job": "Service",
                "instance": "Instance",
                "Value #A": "Crypto Mode",
                "Value #B": "Crypto Ready",
                "Value #C": "Uptime (s)"
              }
            }
          }
        ],
        "options": {
          "showHeader": true,
          "sortBy": []
        },
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "auto",
              "displayMode": "auto"
            },
            "mappings": [
              {
                "type": "value",
                "options": {
                  "0": {
                    "text": "env",
                    "color": "red"
                  },
                  "1": {
                    "text": "kms",
                    "color": "green"
                  }
                }
              }
            ],
            "links": [
              {
                "title": "Health Endpoint",
                "url": "https://api.ledger-mind.org/healthz"
              }
            ]
          },
          "overrides": [
            {
              "matcher": {
                "id": "byName",
                "options": "Uptime (s)"
              },
              "properties": [
                {
                  "id": "unit",
                  "value": "s"
                }
              ]
            }
          ]
        },
        "description": "Current crypto configuration for all services (click row for health endpoint)"
      },
      {
        "id": 8,
        "type": "alertlist",
        "title": "KMS Active Alerts",
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 22
        },
        "options": {
          "showOptions": "current",
          "maxItems": 20,
          "sortOrder": 1,
          "dashboardAlerts": false,
          "alertName": "KMS",
          "dashboardTitle": "",
          "tags": ["kms"],
          "stateFilter": {
            "firing": true,
            "pending": true
          }
        },
        "description": "Active KMS-related alerts (filtered by 'KMS' prefix or 'kms' tag)"
      }
    ],
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
    },
    "annotations": {
      "list": [
        {
          "builtIn": 1,
          "datasource": {
            "type": "grafana",
            "uid": "-- Grafana --"
          },
          "enable": true,
          "hide": true,
          "iconColor": "rgba(0, 211, 255, 1)",
          "name": "Annotations & Alerts",
          "type": "dashboard"
        }
      ]
    }
  }
}
