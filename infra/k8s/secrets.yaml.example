apiVersion: v1
kind: Secret
metadata:
  name: nim-secrets
  namespace: default
type: Opaque
stringData:
  ngc-api-key: "YOUR_NGC_API_KEY_HERE"  # Get from https://org.ngc.nvidia.com/setup/api-key
---
apiVersion: v1
kind: Secret
metadata:
  name: backend-secrets
  namespace: default
type: Opaque
stringData:
  database-url: "postgresql+psycopg://financeagent:YOUR_PASSWORD@postgres-service:5432/finance_agent"
  postgres-password: "YOUR_STRONG_PASSWORD_HERE"  # Generate with: openssl rand -base64 32
