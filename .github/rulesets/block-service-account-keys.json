{
  "name": "Block GCP Service Account Keys",
  "target": "branch",
  "enforcement": "active",
  "conditions": {
    "ref_name": {
      "include": ["~ALL"],
      "exclude": []
    }
  },
  "rules": [
    {
      "type": "file_path_restriction",
      "parameters": {
        "restricted_file_paths": [
          ".*service[-_ ]?account.*\\.json",
          ".*gcp.*key.*\\.json",
          ".*[-_]sa\\.json",
          "gcp-dbt-sa\\.json",
          ".*credentials.*\\.json",
          ".*-key\\.json",
          ".*serviceaccount.*\\.json"
        ]
      }
    }
  ],
  "bypass_actors": []
}
