# Copy this file to `.env` and fill in values
# Used by docker-compose.prod.yml and docker-compose.prod.override.yml

# Database
POSTGRES_PASSWORD=change_me_strong

# Encryption (backend)
ENCRYPTION_ENABLED=1
GCP_KMS_AAD=your_unique_aad_value

# OAuth / Authentication
SESSION_SECRET=change_me_strong_random_secret
OAUTH_GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
OAUTH_GOOGLE_CLIENT_SECRET=your_google_client_secret

# LLM / OpenAI
OPENAI_API_KEY=sk-your-openai-key

# Cloudflare Tunnel (token mode)
# Get this from Cloudflare Zero Trust -> Tunnels -> <your tunnel> -> Connect -> Copy token
CLOUDFLARE_TUNNEL_TOKEN=replace_with_cloudflare_tunnel_token

# Help/RAG
HELP_USE_RAG=1                 # 1=try RAG+LLM; 0=heuristics only
RAG_TOP_K=6                    # number of RAG search results to retrieve
RAG_MIN_SCORE=0.15             # ignore very weak hits (0.0-1.0)
HELP_CACHE_TTL_SEC=600         # cache TTL for help cards
REDIS_URL=redis://redis:6379/0 # optional; if absent, uses in-memory cache
