{
  "name": "finance-agent-web",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "pnpm smoke:backend && vite",
    "dev:strict": "vite --port 5173 --strictPort",
    "prebuild": "pnpm run build:favicon && node scripts/build-stamp.mjs",
    "build": "vite build && pnpm verify:chat-css",
    "verify:chat-css": "node scripts/verify-chat-css.mjs",
    "preview": "vite preview --port 5173 --strictPort",
    "typecheck": "tsc -p tsconfig.build.json --noEmit",
    "build:favicon": "node scripts/build-favicon.mjs",
    "i18n:extract": "tsx scripts/i18n-extract.ts",
    "purge:cdn": "powershell -ExecutionPolicy Bypass -File scripts/purge-cdn.ps1",
    "test": "vitest",
    "test:unit": "vitest --run",
    "test:unit:watch": "vitest",
    "test:unit:ui": "vitest --ui",
    "test:fast": "playwright test --project=chromium --reporter=list",
    "test:fast:dev": "cross-env PW_SKIP_WS=1 BASE_URL=http://127.0.0.1:5173 ALLOW_DEV_ROUTES=1 playwright test -c ./playwright.config.ts",
    "test:fast:auto": "node ../../scripts/start-backend-and-run-e2e.js",
    "test:ui": "playwright test apps/web/tests --project=chromium",
    "test:watch": "vitest --watch",
    "test:cov": "vitest run --coverage",
    "test:types": "tsc -p tsconfig.json --noEmit",
    "test:ml-smoke": "playwright test tests/ml-smoke.spec.ts --reporter=line",
    "test:e2e:ml": "playwright test tests/e2e/ml-e2e.spec.ts --reporter=line",
    "test:e2e:ml:ci": "cross-env BASE_URL=http://localhost:8000 playwright test tests/e2e/ml-e2e.spec.ts --reporter=dot",
    "test:e2e:grafana": "playwright test tests/e2e/grafana-ml.spec.ts --reporter=line",
    "test:e2e:grafana:dash": "playwright test tests/e2e/grafana-dashboard.spec.ts --reporter=line",
    "test:e2e:prod": "cross-env BASE_URL=https://app.ledger-mind.org PW_SKIP_WS=1 playwright test --grep=\"@prod-critical\" --workers=2 --reporter=line",
    "test:e2e:prod:one": "cross-env BASE_URL=https://app.ledger-mind.org PW_SKIP_WS=1 playwright test --project=chromium-prod --reporter=line",
    "test:e2e:prod:smoke": "cross-env BASE_URL=https://app.ledger-mind.org PW_SKIP_WS=1 PW_PROD_WORKERS=2 playwright test tests/e2e/prod-smoke.spec.ts --project=chromium-prod --workers=2 --reporter=line",
    "test:e2e:prod:auto": "cross-env BASE_URL=https://app.ledger-mind.org E2E_AUTO_RELOGIN=1 PW_SKIP_WS=1 PW_PROD_WORKERS=2 playwright test --project=chromium-prod --workers=2 --grep=@prod",
    "test:e2e:prod:llm": "cross-env BASE_URL=https://app.ledger-mind.org PW_SKIP_WS=1 playwright test tests/e2e/chat-llm.spec.ts --project=chromium-prod --workers=1 --reporter=line --grep=@requires-llm",
    "test:e2e:prod:capture": "tsx tests/e2e/.auth/capture-prod-state.ts",
    "test:analytics": "cross-env PLAYWRIGHT_STUB_ANALYTICS=1 playwright test apps/web/tests/suggestions-analytics*.spec.ts --project=chromium",
    "test:csp": "playwright test apps/web/tests/csp.spec.ts --project=chromium",
    "test:dev-menu": "cross-env PW_SKIP_WS=1 BASE_URL=http://127.0.0.1:5173 playwright test tests/dev-menu.spec.ts --project=chromium",
    "test:dev-dock-locking": "cross-env PW_SKIP_WS=1 BASE_URL=http://127.0.0.1:5173 playwright test tests/dev-dock-locking.spec.ts --project=chromium",
    "test:vitest:ui": "vitest --ui",
    "lint": "eslint \"src/**/*.{ts,tsx,js,jsx}\"",
    "lint:guard": "eslint --no-eslintrc --no-inline-config -c .eslintrc.guard.cjs \"src/**/*.{ts,tsx,js,jsx}\" --max-warnings=0",
    "lint:fix": "eslint --fix \"src/**/*.{ts,tsx,js,jsx}\"",
    "lint:json": "node scripts/eslint-json.cjs",
    "lint:metrics": "pnpm run lint:json && node scripts/eslint-metrics.cjs eslint-report.json eslint.prom eslint-summary.json",
    "lint:budget": "pnpm run lint:json && node scripts/compare-eslint-budget.cjs eslint-report.json eslint-budget.json 0 0",
    "lint:rules": "pnpm run lint:json && node scripts/compare-eslint-rules.cjs",
    "lint:ratchet": "pnpm run lint:json && node scripts/eslint-budget-ratchet.cjs",
    "lint:baseline": "pnpm run lint:json && node scripts/eslint-budget-set-baseline.cjs",
    "test:pw": "playwright test",
    "test:pw:ui": "playwright test --ui",
    "pw:install": "playwright install chromium",
    "pw:fast": "cross-env PW_SKIP_WS=1 UV_THREADPOOL_SIZE=32 playwright test --project=chromium --workers=24 --retries=0 --reporter=line --fully-parallel",
    "pw:shard:1": "cross-env PW_SKIP_WS=1 playwright test --project=chromium --workers=24 --reporter=line --shard=1/2",
    "pw:shard:2": "cross-env PW_SKIP_WS=1 playwright test --project=chromium --workers=24 --reporter=line --shard=2/2",
    "pw:changed": "node -e \"const cp=require('child_process');const f=cp.execSync('git diff --name-only main...').toString().split('\\n').filter(p=>/\\.spec\\.(t|j)sx?$/.test(p)); if(!f.length){console.log('No changed specs');process.exit(0)} cp.spawnSync(process.platform==='win32'?'pnpm.cmd':'pnpm',['exec','playwright','test','--project=chromium','--workers=24','--reporter=line',...f],{stdio:'inherit'})\"",
    "fix:empty": "node scripts/fix-empty-catches.mjs",
    "smoke:backend": "powershell -ExecutionPolicy Bypass -File ../backend/app/scripts/smoke-backend.ps1",
    "lint:hooks": "eslint --no-eslintrc -c .eslintrc.hooks.cjs \"src/**/*.{ts,tsx,js,jsx}\" --max-warnings=0 --quiet"
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-portal": "^1.1.10",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-toast": "^1.2.15",
    "@radix-ui/react-tooltip": "^1.2.8",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "lucide-react": "^0.542.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-markdown": "^10.1.0",
    "recharts": "^2.10.4",
    "rehype-raw": "^7.0.0",
    "rehype-sanitize": "^6.0.0",
    "remark-gfm": "^4.0.1",
    "sonner": "^2.0.7",
    "vaul": "^1.1.2",
    "xlsx": "^0.18.5",
    "zod": "^4.1.11",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@playwright/test": "^1.47.2",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^24.5.2",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/coverage-v8": "4.0.8",
    "@vitest/ui": "4.0.8",
    "autoprefixer": "^10.4.20",
    "cross-env": "^7.0.3",
    "dotenv": "^17.2.3",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "globby": "^14.0.2",
    "happy-dom": "^18.0.1",
    "jimp": "^0.22.12",
    "jsdom": "^26.1.0",
    "msw": "^2.4.9",
    "png-to-ico": "^2.1.8",
    "postcss": "^8.4.41",
    "tailwindcss": "^3.4.10",
    "tailwindcss-animate": "^1.0.7",
    "tsx": "^4.19.0",
    "typescript": "^5.4.0",
    "vite": "^5.4.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "4.0.8"
  },
  "overrides": {
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "scheduler": "0.23.2"
  },
  "resolutions": {
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "scheduler": "0.23.2"
  },
  "pnpm": {
    "overrides": {
      "react": "18.3.1",
      "react-dom": "18.3.1",
      "scheduler": "0.23.2",
      "@radix-ui/react-accordion": "1.1.2",
      "@radix-ui/react-avatar": "1.1.2",
      "@radix-ui/react-checkbox": "1.1.2",
      "@radix-ui/react-dialog": "1.1.2",
      "@radix-ui/react-dropdown-menu": "2.1.2",
      "@radix-ui/react-label": "2.1.0",
      "@radix-ui/react-popover": "1.1.2",
      "@radix-ui/react-portal": "1.1.2",
      "@radix-ui/react-primitive": "2.0.0",
      "@radix-ui/react-scroll-area": "1.2.0",
      "@radix-ui/react-separator": "1.1.0",
      "@radix-ui/react-slot": "1.1.2",
      "@radix-ui/react-switch": "1.1.1",
      "@radix-ui/react-toast": "1.2.2",
      "@radix-ui/react-tooltip": "1.1.2",
      "@floating-ui/core": "1.6.5",
      "@floating-ui/dom": "1.6.11",
      "@floating-ui/utils": "0.2.8",
      "@floating-ui/react-dom": "2.1.1"
    }
  }
}
