{
  "name": "finance-agent-web",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "pnpm smoke:backend && vite",
    "prebuild": "pnpm run build:favicon && node scripts/build-stamp.mjs",
    "build": "vite build",
    "preview": "vite preview --port 5173 --strictPort",
    "typecheck": "tsc -p tsconfig.build.json --noEmit",
    "build:favicon": "node scripts/build-favicon.mjs",
    "i18n:extract": "tsx scripts/i18n-extract.ts",
    "purge:cdn": "powershell -ExecutionPolicy Bypass -File scripts/purge-cdn.ps1",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:watch": "vitest --watch",
    "test:cov": "vitest run --coverage",
    "test:types": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint \"src/**/*.{ts,tsx,js,jsx}\"",
    "lint:guard": "eslint --no-eslintrc --no-inline-config -c .eslintrc.guard.cjs \"src/**/*.{ts,tsx,js,jsx}\" --max-warnings=0",
    "lint:fix": "eslint --fix \"src/**/*.{ts,tsx,js,jsx}\"",
    "lint:json": "node scripts/eslint-json.cjs",
    "lint:metrics": "pnpm run lint:json && node scripts/eslint-metrics.cjs eslint-report.json eslint.prom eslint-summary.json",
    "lint:budget": "pnpm run lint:json && node scripts/compare-eslint-budget.cjs eslint-report.json eslint-budget.json 0 0",
    "lint:rules": "pnpm run lint:json && node scripts/compare-eslint-rules.cjs",
    "lint:ratchet": "pnpm run lint:json && node scripts/eslint-budget-ratchet.cjs",
    "lint:baseline": "pnpm run lint:json && node scripts/eslint-budget-set-baseline.cjs",
    "test:pw": "playwright test",
    "test:pw:ui": "playwright test --ui",
    "fix:empty": "node scripts/fix-empty-catches.mjs",
    "smoke:backend": "powershell -ExecutionPolicy Bypass -File ../backend/app/scripts/smoke-backend.ps1",
  "lint:hooks": "eslint --no-eslintrc -c .eslintrc.hooks.cjs \"src/**/*.{ts,tsx,js,jsx}\" --max-warnings=0 --quiet"
  },
  "dependencies": {
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-toast": "^1.2.15",
    "@radix-ui/react-tooltip": "^1.2.8",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "lucide-react": "^0.542.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^10.1.0",
    "recharts": "^2.10.4",
    "rehype-raw": "^7.0.0",
    "rehype-sanitize": "^6.0.0",
    "remark-gfm": "^4.0.1",
    "vaul": "^1.1.2",
    "zod": "^4.1.11",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^24.5.2",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/coverage-v8": "3.2.4",
    "globby": "^14.0.2",
    "autoprefixer": "^10.4.20",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "happy-dom": "^18.0.1",
    "jimp": "^0.22.12",
    "jsdom": "^26.1.0",
    "png-to-ico": "^2.1.8",
    "postcss": "^8.4.41",
    "tailwindcss": "^3.4.10",
    "tailwindcss-animate": "^1.0.7",
    "tsx": "^4.19.0",
    "typescript": "^5.4.0",
    "vite": "^5.4.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4",
    "msw": "^2.4.9",
    "@playwright/test": "^1.47.2"
  }
}