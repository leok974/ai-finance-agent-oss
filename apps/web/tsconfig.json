{
	"compilerOptions": {
		"target": "ES2022",
		"lib": ["ES2022", "DOM"],
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"jsx": "react-jsx",
		"strict": true,
		"noEmit": true,
		"baseUrl": ".",
		"paths": { "@/*": ["src/*"] },
		"types": ["vite/client", "vitest", "node", "jsdom"]
	},
	"include": [
		"src",
		"vite-env.d.ts",
		"vitest.setup.ts"
	],
	"exclude": ["dist", "node_modules", "scripts"]
}
